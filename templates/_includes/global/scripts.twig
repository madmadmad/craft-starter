{% if craft.app.config.general.devMode %}
  <script src="https://localhost:9000/livereload.js"></script>
{% endif %}

<script>
  window.csrfTokenName = "{{ craft.app.config.general.csrfTokenName|e('js') }}";
  window.csrfTokenValue = "{{ craft.app.request.csrfToken|e('js') }}";

  loadjs('/js/main.js?v={{version}}', function() {
    initMain();

    if ($('.map').length) {
      loadjs(['/js/map.js?v={{version}}'], function() {
        initMap();
      });
    }

  });
</script>
